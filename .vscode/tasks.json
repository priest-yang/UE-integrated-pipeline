    "tasks": [
        {
            "label": "build FAM",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // Ensure you include debugging information
                "-std=c++17",
                "fam/*.cpp",
                "-o",
                "fam/main", 
                "-I${workspaceFolder}/includes", 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }, 
        {
            "label": "build feature generator",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // Ensure you include debugging information
                "-std=c++17",
                "feature_generator/*.cpp",
                "-o",
                "feature_generator/main", 
                "-I${workspaceFolder}/includes", 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }

        
    ],
